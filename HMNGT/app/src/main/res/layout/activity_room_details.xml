<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.simon.hmngt.Activities.RoomDetailsActivity">

        <!--<RelativeLayout-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content">-->
            <!---->
        <!--</RelativeLayout>-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:elevation="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl"
                    android:layout_centerHorizontal="true"
                    android:textSize="20dp"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:text="Room Details"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl2"
                    android:layout_below="@+id/lbl"
                    android:textSize="16dp"
                    android:text="Room Number"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="16dp"
                    android:id="@+id/tvRoomNumber"
                    android:layout_below="@+id/lbl2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl3"
                    android:textSize="16dp"
                    android:layout_below="@+id/tvRoomNumber"
                    android:text="Room Type"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="16dp"
                    android:layout_below="@+id/lbl3"
                    android:id="@+id/tvRoomType"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl4"
                    android:layout_below="@+id/tvRoomType"
                    android:textSize="16dp"
                    android:text="Room Floor"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="16dp"
                    android:id="@+id/tvRoomFloor"
                    android:layout_below="@+id/lbl4"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl5"
                    android:layout_below="@+id/tvRoomFloor"
                    android:textSize="16dp"
                    android:text="Room Description"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="16dp"
                    android:id="@+id/tvRoomDescription"
                    android:layout_below="@+id/lbl5"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="16dp"
                    android:id="@+id/stu"
                    android:text="Recommended Roommates"
                    android:layout_below="@+id/tvRoomDescription"
                    android:layout_centerHorizontal="true"/>

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:id="@+id/listView"
                    android:layout_below="@+id/stu"/>

                <Button
                    android:layout_width="200dp"
                    android:layout_centerHorizontal="true"
                    android:text="Book"
                    android:id="@+id/bnSubmit"
                    android:textColor="#fff"
                    android:background="@color/design_default_color_primary_dark"
                    android:layout_below="@+id/listView"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </ScrollView>
    </android.support.v7.widget.CardView>
</LinearLayout>
