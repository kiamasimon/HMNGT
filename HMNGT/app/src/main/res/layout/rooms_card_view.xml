<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview1"
    android:layout_width="match_parent"
    android:layout_marginLeft="7dp"
    android:layout_marginRight="7dp"
    android:layout_marginTop="15dp"
    android:layout_height="wrap_content"
    card_view:cardElevation="5dp"
    card_view:contentPadding="2dp"
    card_view:cardCornerRadius="7dp"
    card_view:cardMaxElevation="12dp"
    android:paddingBottom="5dp"
    android:background="#a7a7a7">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:background="#ECEFF1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="2dp"
            android:text="Room Number:"
            android:textSize="16dp"
            android:id="@+id/lbl1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvRoomNumber"
            android:layout_marginTop="2dp"
            android:textSize="16dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_below="@+id/lbl1"
            android:layout_marginStart="60dp"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_vcompany"
            android:layout_below="@+id/tvRoomNumber"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="2dp"
            android:text="Room Floor"
            android:textSize="16dp"
            android:id="@+id/lbl2"
            android:layout_below="@+id/tvRoomNumber"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/design_default_color_primary_dark"
            android:id="@+id/tvRoomFloor"
            android:layout_marginStart="60dp"
            android:layout_below="@+id/lbl2"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="2dp"
            android:text="Room Type:"
            android:textSize="16dp"
            android:id="@+id/lbl3"
            android:layout_below="@+id/tvRoomFloor"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:textColor="@color/design_default_color_primary_dark"
            android:id="@+id/tvType"
            android:layout_marginStart="60dp"
            android:layout_below="@+id/lbl3"
            android:layout_marginLeft="15dp"/>

        <!--<TextView-->
        <!--android:fontFamily="sans-serif"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:textSize="20dp"-->
        <!--android:textColor="#000"-->
        <!--android:text="Product Name"-->
        <!--android:id="@+id/textViewRegion"-->
        <!--android:layout_centerVertical="true"/>-->
    </RelativeLayout>

</android.support.v7.widget.CardView>