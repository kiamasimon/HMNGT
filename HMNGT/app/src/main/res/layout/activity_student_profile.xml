<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.simon.hmngt.Activities.StudentProfileActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:id="@+id/card2"
        android:layout_height="60dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lbl"
                android:textSize="25dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimaryDark"
                android:text="Profile"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/card2"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:elevation="5dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:paddingBottom="20dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:id="@+id/image"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/ic_edit"
                    android:layout_marginRight="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl1"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/image"
                    android:text="First Name"
                    android:textSize="17dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvFirstName"
                    android:textSize="17dp"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:layout_below="@+id/lbl1"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl2"
                    android:text="Last Name"
                    android:textSize="17dp"
                    android:layout_below="@+id/tvFirstName"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvLastName"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="17dp"
                    android:layout_below="@+id/lbl2"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl3"
                    android:text="Email"
                    android:textSize="17dp"
                    android:layout_below="@+id/tvLastName"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvEmail"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="17dp"
                    android:layout_below="@+id/lbl3"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl4"
                    android:text="Phone Number"
                    android:textSize="17dp"
                    android:layout_below="@+id/tvEmail"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPhoneNumber"
                    android:layout_marginLeft="40dp"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="15dp"
                    android:layout_below="@+id/lbl4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl5"
                    android:text="Hobbies"
                    android:textSize="17dp"
                    android:layout_below="@+id/tvPhoneNumber"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvHobbies"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="17dp"
                    android:layout_below="@+id/lbl5"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl6"

                    android:text="Religion"
                    android:textSize="17dp"
                    android:layout_below="@+id/tvHobbies"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvReligion"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="15dp"
                    android:layout_below="@+id/lbl6"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl7"
                    android:text="Course"
                    android:textSize="17dp"
                    android:layout_below="@+id/tvReligion"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvCourse"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="15dp"
                    android:layout_below="@+id/lbl7"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl8"
                    android:text="Visitor Count Expected"
                    android:textSize="17dp"
                    android:layout_below="@+id/tvCourse"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvVisitorCount"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="15dp"
                    android:layout_below="@+id/lbl8"
                    android:layout_marginLeft="40dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl9"
                    android:text="Drug Use?"
                    android:textSize="17dp"
                    android:layout_below="@+id/tvVisitorCount"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDrugUse"
                    android:textColor="@color/design_default_color_primary_dark"
                    android:textSize="15dp"
                    android:layout_below="@+id/lbl9"
                    android:layout_marginLeft="40dp"/>

                <Button
                    android:layout_marginTop="40dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="Edit Profile"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="#fff"
                    android:layout_below="@+id/tvDrugUse"
                    android:id="@+id/btnEdit"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</RelativeLayout>
