<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.simon.hmngt.Activities.AddRoomActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:elevation="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="40dp"
                android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"

                    android:layout_height="50dp"
                    android:id="@+id/card">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Add Room"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:textSize="20dp"
                            android:textColor="@color/primary_dark"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <TextView
                    android:layout_below="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl1"
                    android:text="Room Number"
                    android:textColor="@color/primary_dark"
                    android:textSize="16dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edRoomNumber"
                    android:layout_below="@+id/lbl1"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edRoomNumber"
                    android:id="@+id/lbl2"
                    android:text="Room Type"
                    android:textColor="@color/primary_dark"
                    android:textSize="16dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edRoomType"
                    android:layout_below="@+id/lbl2"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edRoomType"
                    android:id="@+id/lbl3"
                    android:text="Room Floor"
                    android:textColor="@color/primary_dark"
                    android:textSize="16dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edRoomFloor"
                    android:layout_below="@+id/lbl3"
                    android:textSize="16dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/lbl4"
                    android:layout_below="@+id/edRoomFloor"
                    android:text="Room Description"
                    android:textColor="@color/primary_dark"
                    android:textSize="16dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edRoomDescription"
                    android:layout_below="@+id/lbl4"
                    android:textSize="16dp"/>

                <Button
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Add Room"
                    android:id="@+id/bnAdd"
                    android:layout_below="@+id/edRoomDescription"
                    android:layout_marginTop="20dp"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </ScrollView>
</RelativeLayout>
